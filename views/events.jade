extends layout

block content
    
    // Events
    div.row.contentSection#events
        if !isEvents
            h1 No Upcoming Events
        else
            each event, i in calendarEvent
                div.row.col-xs-10.col-xs-offset-1.event
                    h1 #{calendarEvent[i].summary}
                    div.col-xs-4
                        - var convertDate = calendarEvent[i].start.date.substr(5) + '-' + calendarEvent[i].start.date.substr(0, 4);    
                        h3 #{convertDate}
                    div.col-xs-4
                        p(style='text-align: center') #{calendarEvent[i].description}
                    div.col-xs-4
                        h4(style='text-align: right') #{calendarEvent[i].location}
